# MenuItem Class of Final Project

class MenuItem(object):

    def __init__(self, name, typeOfItem, price, desc):
        self.name = name
        self.typeOfItem = typeOfItem
        self.price = price
        self.desc = desc

    def getName(self):
        return self.name

    def getTypeOfItem(self):
        return self.typeOfItem

    def getPrice(self):
        return self.price

    def getDescription(self):
        return self.desc

    def setName(self):
        newName = input("Enter the name you'd like to give this item: ")
        self.name = newName

    def setTypeOfItem(self):
        newType = input("Enter the type that you'd like to give this item: ")
        self.typeOfItem = newType

    def setPrice(self):
        newPrice = input("Enter the price that you'd like to give this item: ")
        self.price = newPrice

    def setDescription(self):
        newDesc = input("Enter the description you'd like to give this item: ")
        self.desc = newDesc

    def __str__(self):
        return (self.name + " (" + self.typeOfItem + ") " + ": " + str(self.price) + "\n\t" + self.desc)
